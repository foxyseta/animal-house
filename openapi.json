  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "photos": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "url"
            }
          },
          "quantity": {
            "type": "number",
            "format": "uint64"
          },
          "category": {
            "type": "number",
            "format": "uint64"
          },
          "subcategories": {
            "type": "array",
            "items": {
              "type": "number",
              "format": "uint64"
            }
          }
        }
      },
      "Service": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "format": "uuid"
          },
          "type": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "photos": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "openingHours": {
            "$ref": "#/components/schemas/Timetable"
          }
        }
      },
      "Timetable": {
        "type": "object",
        "properties": {
          "intervals": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "dateTime"
            }
          }
        }
      },
      "OfflineService": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Service"
          },
          {
            "type": "object",
            "properties": {
              "location": {
                "type": "string"
              }
            }
          }
        ]
      },
      "OnlineService": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Service"
          },
          {
            "type": "object",
            "properties": {
              "url": {
                "type": "string"
              }
            }
          }
        ]
      },
      "Order": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "format": "uuid"
          },
          "product": {
            "type": "string",
            "format": "uuid"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "shipDate": {
            "type": "string",
            "format": "date-time"
          },
          "status": {
            "type": "string",
            "description": "Order Status",
            "enum": [
              "placed",
              "approved",
              "delivered"
            ]
          },
          "complete": {
            "type": "boolean",
            "default": false
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "number",
            "format": "uint64"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Subcategory": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "number",
            "format": "uint64"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "format": "uuid"
          },
          "username": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "level": {
            "type": "integer",
            "description": "User subscription or role",
            "enum": [
              0,
              1,
              2
            ]
          }
        }
      },
      "Tag": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Pet": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "format": "uuid"
          },
          "category": {
            "$ref": "#/components/schemas/Category"
          },
          "name": {
            "type": "string",
            "example": "doggie"
          },
          "photos": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tag"
            }
          }
        }
      },
      "StorePet": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Pet"
          },
          {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "description": "pet status in the store",
                "enum": [
                  "available",
                  "pending",
                  "sold"
                ]
              }
            }
          }
        ]
      },
      "GameType": {
        "type": "string",
        "enum": [
          "quiz"
        ]
      },
      "GameScore": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "format": "uuid"
          },
          "user": {
            "type": "string",
            "format": "uuid"
          },
          "game": {
            "$ref": "#/components/schemas/GameType"
          },
          "score": {
            "type": "number"
          }
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "total": {
            "type": "number",
            "minimum": 0
          },
          "limit": {
            "type": "number",
            "minimum": 1
          },
          "page": {
            "type": "number",
            "minimum": 1
          },
          "pages": {
            "type": "number",
            "minimum": 1
          }
        }
      }
    }
  }
}