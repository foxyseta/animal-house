            "in": "path",
            "required": true,
            "schema": {
              "type": "number",
              "format": "uint64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Request fullfilled",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Subcategory"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "put": {
        "tags": [
          "store"
        ],
        "summary": "Add a dubcategory to a category.",
        "requestBody": {
          "required": true,
